<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".MainActivity">

    <!--text view for displaying the selected date-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phaseView"
                    android:layout_width="294dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Fase Lunar"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/moonDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp"
                    android:layout_weight="1"
                    android:backgroundTint="#A1000000"
                    android:shadowColor="#FFFFFF"
                    android:text="Ver Fase"
                    android:textColor="#77A6DE"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/idTVDate"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Fecha actual"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <CalendarView
            android:id="@+id/calendarView"
            style="@android:style/Widget.Holo.CalendarView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:background="#B2F4B19C"
            android:dateTextAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            android:unfocusedMonthDateColor="#8BFFFFFF"
            android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Body2"
            android:weekNumberColor="#8FFFFFFF"
            android:weekSeparatorLineColor="#BF08002A" />

        <TextView
            android:id="@+id/ListaTerminos"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#6F000012"
            android:gravity="center"
            android:shadowColor="#6F000012"
            android:text="Agregar nuevos eventos"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#B277A6DE"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:hint="Ingrese el evento"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/saveEvent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#A1000000"
                android:text="Guardar Evento"
                android:textColor="#77A6DE" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/desLunaNueva"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Eventos de Hoy"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/MostarEvento"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:background="#6FFFFFFF"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/glosario"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_weight="1"
                android:backgroundTint="#A1000000"
                android:text="Glosario"
                android:textColor="#77A6DE"
                android:textSize="15sp" />



        </LinearLayout>

        <ImageView
            android:id="@+id/iv_imagen"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo3"></ImageView>
    </LinearLayout>

</RelativeLayout>
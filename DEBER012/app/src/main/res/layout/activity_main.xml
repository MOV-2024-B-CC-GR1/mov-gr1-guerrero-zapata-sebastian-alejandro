<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_EditarFacultad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Btn_EliminarFacultad"
        android:layout_width="297dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:text="Eliminar"
        android:textColorLink="#C71616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_EditarFacultad" />

    <Button
        android:id="@+id/Btn_ListadoCarreras"
        android:layout_width="297dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:text="Carreras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_EliminarFacultad" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Facultades"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

    <ListView
        android:id="@+id/Ls_Facultades"
        android:layout_width="370dp"
        android:layout_height="366dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Btn_AgregarFacultad"
        android:layout_width="297dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:text="Agregar"
        android:textColorLink="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ls_Facultades" />

    <Button
        android:id="@+id/Btn_EditarFacultad"
        android:layout_width="297dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:text="Editar"
        android:textColorLink="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_AgregarFacultad" />

</androidx.constraintlayout.widget.ConstraintLayout>
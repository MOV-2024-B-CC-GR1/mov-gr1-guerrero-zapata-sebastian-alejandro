<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_ListaCarreras"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carreras">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Carreras"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/Ls_Carreras"
        android:layout_width="351dp"
        android:layout_height="362dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238" />

    <Button
        android:id="@+id/Btn_AgregarCarrera"
        android:layout_width="267dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#8EE02D"
        android:text="Agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ls_Carreras" />

    <Button
        android:id="@+id/Btn_EditarCarrera"
        android:layout_width="267dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#169FDE"
        android:text="Editar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_AgregarCarrera" />

    <Button
        android:id="@+id/Btn_EliminarCarrera"
        android:layout_width="267dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E02222"
        android:text="Elimar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_EditarCarrera" />

    <Button
        android:id="@+id/Btn_RegresarFacultades"
        android:layout_width="267dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#1130D5"
        android:text="Regresar a facultades"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_EliminarCarrera" />
</androidx.constraintlayout.widget.ConstraintLayout>